{
    "manifest_version": 2,
    "name": "Twitch Notis",
    "version": "1.5",
    "browser_specific_settings": {
      "gecko": {
        "id": "emma@gracejones.email",
        "strict_min_version": "42.0"
      }
    },
    "browser_action": {
        "default_icon": {
          "19": "icons/icon-48.png",
          "38": "icons/icon-48.png"
        },
        "default_title": "Twitch Notis",
        "default_popup": "index.html"
    },
  
    "description": "Twitch Noti",
  
    "icons": {
      "48": "icons/icon-48.png"
    },

    "background": {
        "scripts": ["tmi.min.js", "background.js"]
    },
    "permissions": ["notifications", "storage"]
  }